<header class="page-header">
  <h1>Login</h1>
</header>

<%= form_tag '/login', class: 'form' do %>
  <div class="mb-3">
    <%= label_tag :email, "Email", class: 'form-label' %>
    <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Enter Email' %>
  </div>

  <div class="mb-3">
    <%= label_tag :password, "Password", class: 'form-label' %>
    <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter Password' %>
  </div>

  <%= submit_tag "Submit", class: 'btn btn-success' %>
<% end %>
